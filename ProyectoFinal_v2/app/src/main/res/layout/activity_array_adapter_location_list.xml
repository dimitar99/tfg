<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edge_white"
    android:orientation="horizontal"
    android:padding="20dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/gimnasio" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/fragLocationListItemGymName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gimnasio Sportium" />

        <TextView
            android:id="@+id/fragLocationListItemStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle Manuel Jimenez nº 23" />

        <TextView
            android:id="@+id/fragLocationListItemValoration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valoracion media: 4" />

        <TextView
            android:id="@+id/fragLocationListItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coste medio: 25€/mes" />

    </LinearLayout>
</LinearLayout>